<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:controller="pl.edu.pw.mwo1.AppController" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Label alignment="CENTER" contentDisplay="CENTER" prefWidth="800.0" text="Weather Report" textAlignment="CENTER">
        <font>
          <Font name="System Bold" size="27.0" />
        </font>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
    </Label>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <Label text="Search for cities:">
           <HBox.margin>
               <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
           </HBox.margin>
           <font>
               <Font size="18.0"/>
           </font>
        </Label>
        <TextField fx:id="citySearchbar" promptText="enter city name...">
           <font>
               <Font size="15.0"/>
           </font>
           <HBox.margin>
               <Insets bottom="40.0" left="70.0" right="30.0" top="40.0"/>
           </HBox.margin>
        </TextField>
        <Button fx:id="searchButton" onAction="#onCitySearch" mnemonicParsing="false" text="Search">
           <font>
               <Font size="15.0"/>
           </font>
           <HBox.margin>
               <Insets bottom="40.0" left="10.0" top="40.0"/>
           </HBox.margin>
        </Button>
    </HBox>
</VBox>
